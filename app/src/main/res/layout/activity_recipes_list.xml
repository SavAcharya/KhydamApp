<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="@dimen/padding_mid"
    tools:context="in.sayes.android.khadyam.activity.FreeRecipesActivity" >

    <TextView
        android:id="@+id/txtHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipes "
         android:textColor="@color/header_text_color"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/blackline" />

    <ListView
        android:id="@+id/list_recipes_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:dividerHeight="@dimen/padding_samll"
         android:background="@android:color/transparent"
        android:layout_marginTop="@dimen/padding_mid">
    </ListView>

</LinearLayout>