<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:weightSum="10"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/Padding_verySmall"
    android:layout_marginBottom="@dimen/padding_mid"
    >
<TextView
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:textSize="@dimen/text_size_mid"
    android:textColor="@color/text_color"
    android:id="@+id/txt_schedule_starting_date"
    android:gravity="center" android:drawableRight="@android:drawable/status_bar_item_background"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="@dimen/text_size_mid"
        android:textColor="@color/text_color"
        android:id="@+id/txt_schedule_weeklyDays"
        android:gravity="center" android:drawableRight="@android:drawable/status_bar_item_background"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:textSize="@dimen/text_size_mid"
        android:textColor="@color/text_color"
        android:id="@+id/txt_schedule_courseName"
        android:gravity="center" android:drawableRight="@android:drawable/status_bar_item_background"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="@dimen/text_size_mid"
        android:textColor="@color/text_color"
        android:id="@+id/txt_schedule_time_slot"
        android:gravity="center" android:drawableRight="@android:drawable/status_bar_item_background"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/text_size_mid"
        android:textColor="@color/text_color"
        android:id="@+id/txt_schedule_courseDuration"
        android:gravity="center" />

</LinearLayout>