<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button_holo_dark"
    android:gravity="center_vertical"
    android:orientation="vertical"

    android:paddingLeft="@dimen/padding_mid"
    android:paddingRight="@dimen/padding_mid"
    android:paddingTop="@dimen/padding_mid"
    >

    <ImageView
        android:id="@+id/img_recipeImg"
        android:layout_width="@dimen/recipe_image"
        android:layout_height="@dimen/recipe_image"
        android:scaleType="fitCenter"
        android:layout_marginRight="@dimen/padding_mid" 
        android:layout_alignParentLeft="true"
        android:background="@drawable/rounded_button_holo_dark"
        />

    <TextView
        android:id="@+id/txt_recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_recipeImg"
        android:textColor="@color/text_color"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/txt_recipeDesc"
        android:layout_width="wrap_content"
        
        android:layout_height="wrap_content"
         android:textColor="@color/text_color_semiLight"
        android:layout_toRightOf="@+id/img_recipeImg"
        
        android:layout_below="@+id/txt_recipeName"
      android:layout_marginTop="@dimen/Padding_verySmall"
        android:text="" />

</RelativeLayout>