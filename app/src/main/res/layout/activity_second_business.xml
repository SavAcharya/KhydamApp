<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg"
    android:padding="@dimen/padding_mid">
    
    <TextView
        android:id="@+id/txt_recipeDetails_recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/secondBusines_title"
         android:textColor="@color/header_text_color"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/blackline"
       android:layout_margin="@dimen/padding_samll"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <TextView 
        android:id="@+id/txt_CateringService"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textColor="@color/text_color"
        android:gravity="fill"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />
    </ScrollView>
</LinearLayout>
