<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
    android:padding="@dimen/padding_samll"
    >
        <TextView
        android:id="@+id/txt_coursesListHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/header_text_color"
        android:textStyle="bold"
        android:typeface="serif"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/blackline"
        android:layout_marginBottom="@dimen/padding_mid"/>
    <ListView
        android:id="@+id/listView_courses"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
         android:dividerHeight="@dimen/padding_samll"
         android:background="@android:color/transparent"
          android:layout_margin="@dimen/padding_mid"
        >

    </ListView>




</LinearLayout>
