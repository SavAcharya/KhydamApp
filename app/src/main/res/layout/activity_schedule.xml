<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="@dimen/padding_mid"
    >


    <TextView
        android:id="@+id/txt_recipeDetails_recipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule"
        android:textColor="@color/header_text_color"
        android:textStyle="bold"
        android:typeface="serif"

        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/view1"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="@drawable/blackline" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/textBox_hight"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="@dimen/Padding_verySmall"
        android:background="@color/semi_transparent"
        android:gravity="center_vertical"
       >
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Starting Date"

            android:textSize="@dimen/text_size_mid"

            android:textColor="@color/text_color"
            android:gravity="center" android:drawableRight="@android:drawable/status_bar_item_app_background"

            android:id="@+id/scheduleHeaderStartingDate" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Weekly Days"
            android:textSize="@dimen/text_size_mid"
            android:textColor="@color/text_color"
            android:gravity="center" android:drawableRight="@android:drawable/status_bar_item_app_background"
            android:id="@+id/scheduleHeaderDays" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="Course"
            android:textSize="@dimen/text_size_mid"
            android:textColor="@color/text_color"
            android:gravity="center" android:drawableRight="@android:drawable/status_bar_item_app_background"
            android:id="@+id/scheduleHeaderCourseName" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Timing"
            android:textSize="@dimen/text_size_mid"
            android:textColor="@color/text_color"
            android:gravity="center" android:drawableRight="@android:drawable/status_bar_item_app_background"
            android:id="@+id/scheduleHeaderTiming" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Days"
            android:textSize="@dimen/text_size_mid"
            android:textColor="@color/text_color"
            android:gravity="center"
            android:id="@+id/scheduleHeaderTotaldays" />



    </LinearLayout>
    <ListView
        android:id="@+id/list_schedule_time_slot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:divider="@drawable/blackline"

        />
</LinearLayout>